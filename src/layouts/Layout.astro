---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Anasuya Construction - Professional Construction and Planning Services" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<header class="header">
			<nav>
				<div class="logo">Anasuya Construction</div>
				<ul class="nav-links">
					<li><a href="/">Home</a></li>
					<li><a href="#services">Services</a></li>
					<li><a href="#projects">Projects</a></li>
					<li><a href="#contact">Contact</a></li>
				</ul>
			</nav>
		</header>
		<slot />
		<footer>
			<div class="footer-content">
				<p>&copy; 2024 Anasuya Construction. All rights reserved.</p>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--primary: #1a4d7c;
		--secondary: #f4a261;
		--text: #2b2b2b;
		--background: #ffffff;
		--accent: #e76f51;
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		font-family: 'Roboto', system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
		scroll-behavior: smooth;
	}
	body {
		min-height: 100vh;
	}
	.header {
		background: var(--primary);
		padding: 1rem 2rem;
		position: sticky;
		top: 0;
		z-index: 100;
	}
	nav {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.logo {
		color: white;
		font-size: 1.5rem;
		font-weight: 700;
	}
	.nav-links {
		display: flex;
		gap: 2rem;
		list-style: none;
	}
	.nav-links a {
		color: white;
		text-decoration: none;
		font-weight: 500;
	}
	.nav-links a:hover {
		color: var(--secondary);
	}
	footer {
		background: var(--primary);
		color: white;
		padding: 2rem;
		margin-top: 4rem;
		text-align: center;
	}
	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}
	}
</style>