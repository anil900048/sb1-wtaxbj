---
interface Props {
	address: string;
	phone: string;
	email: string;
}

const { address, phone, email } = Astro.props;
---

<section id="contact" class="contact">
	<div class="container">
		<h2>Contact Us</h2>
		<div class="contact-content">
			<div class="contact-info">
				<h3>Get in Touch</h3>
				<p class="contact-detail">
					<span class="icon">üìç</span>
					<span>{address}</span>
				</p>
				<p class="contact-detail">
					<span class="icon">üìû</span>
					<span>{phone}</span>
				</p>
				<p class="contact-detail">
					<span class="icon">üìß</span>
					<span>{email}</span>
				</p>
			</div>
			<form class="contact-form">
				<input type="text" placeholder="Your Name" required />
				<input type="email" placeholder="Your Email" required />
				<textarea placeholder="Your Message" rows="5" required></textarea>
				<button type="submit">Send Message</button>
			</form>
		</div>
	</div>
</section>

<style>
	.contact {
		background: #f9fafb;
		padding: 4rem 0;
	}
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}
	h2 {
		text-align: center;
		color: var(--primary);
		font-size: 2.5rem;
		margin-bottom: 3rem;
	}
	.contact-content {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 4rem;
	}
	.contact-info h3 {
		color: var(--primary);
		font-size: 1.8rem;
		margin-bottom: 2rem;
	}
	.contact-detail {
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		margin-bottom: 1.5rem;
		font-size: 1.1rem;
		line-height: 1.6;
	}
	.icon {
		font-size: 1.5rem;
	}
	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.contact-form input,
	.contact-form textarea {
		padding: 0.8rem;
		border: 1px solid #ddd;
		border-radius: 4px;
		font-size: 1rem;
	}
	.contact-form button {
		background: var(--primary);
		color: white;
		padding: 1rem;
		border: none;
		border-radius: 4px;
		font-size: 1rem;
		cursor: pointer;
		transition: background 0.3s ease;
	}
	.contact-form button:hover {
		background: var(--accent);
	}
	@media (max-width: 768px) {
		.contact-content {
			grid-template-columns: 1fr;
		}
	}
</style>